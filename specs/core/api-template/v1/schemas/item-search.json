{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "item-search.json",
  "title": "ItemSearchRequest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "search": {
      "type": "string",
      "description": "Free-text search expression"
    },
    "filter": {
      "type": "string",
      "description": "OData filter expression"
    },
    "orderby": {
      "type": "string",
      "description": "OData order by expression"
    },
    "top": {
      "type": "integer",
      "minimum": 1,
      "maximum": 200,
      "description": "Max items to return"
    },
    "skip": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of items to skip"
    },
    "includeCount": {
      "type": "boolean",
      "description": "Whether to include the total count"
    }
  },
  "minProperties": 1
}
